{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "SjASMPlus",
			"type": "shell",
			"command": "sjasmplus",
			"options": {
				"cwd": "${fileDirname}"
			},
			"windows": {
				"command": "sjasmplus.exe",
				"options": {
					"shell": {
						"executable": "C:\\WINDOWS\\System32\\cmd.exe",
						"args": [ "/d", "/c" ]
					}
				}
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"isBackground": false,
			"presentation": {
				"echo": false,
				"reveal": "silent",
				"focus": false,
				"panel": "shared"
			},
			"args": [
				"--nologo",
				"--lst=${fileBasenameNoExtension}.lst",
				"${fileBasename}"
			],
			"problemMatcher": "$errmatcher-sjasmplus"
		},
		{
			"label": "build",
			"type": "shell",
			"command": "bash compile.sh",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"windows": {
				"command": "bash compile.sh",
				"options": {
					"shell": {
						"executable": "C:\\WINDOWS\\System32\\cmd.exe",
						"args": [ "/d", "/c" ]
					}
				}
			},
			"isBackground": false,
			"presentation": {
				"echo": false,
				"reveal": "always",
				"focus": false,
				"panel": "dedicated"
			},
			"problemMatcher": "$errmatcher-sjasmplus"
		}
	]
}